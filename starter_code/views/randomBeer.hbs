<div class="random-beer-container">
    <img class="random-beer-img" src="{{this.image_url}}" alt="">
    <div class="random-beer-info">
        <h1 class="beer-name">{{this.name}}</h1>
        <h3 class="beer-tagline">{{this.tagline}}</h3>
        <p class="beer-description">{{this.description}}</p>
        <h3 class="beer-pairing-title">Food pairing:</h3>
        <ul class="beer-pairing-list">
            {{#each this.food_pairing}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
        <p class="beer-brewers-tips"><b>Brewers Tips:</b> {{this.brewers_tips}}</p>
    </div>
</div>